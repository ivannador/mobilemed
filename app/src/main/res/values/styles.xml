<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="numberPadStyle">@style/NumberPad</item>
    </style>

    <style name="LaunchTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/launchWindowBackground</item>
    </style>

    <style name="BulkyDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/colorWhiteTransparent</item>
    </style>

    <style name="NumberPad" parent="android:Widget.Holo.Light">
        <item name="columnCount">3</item>
        <item name="orientation">horizontal</item>
        <item name="useDefaultMargins">false</item>
    </style>

</resources>
